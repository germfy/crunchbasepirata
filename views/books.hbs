<h1>Libros</h1>
<form action="/buscar" method="post">
  <label for="titulo">Buscar</label>
  <input type="text" name="titulo" value="" id="titulo" placeholder="Buscar un libro">
  <button type="submit" name="button">Buscar</button>
</form>
<div>
  <div class="grid-encabezado">
    <div>Titulo</div>
    <div>Autor</div>
  </div>
  <div class="grid-libros" id="tablalibros">
    {{#each libros}}
      <div><a href="/libros/{{this._id}}">{{this.title}}</a></div>
      <div>{{this.author.[0].name}} {{this.author.[0].lastName}}</div>
      <div><a href="/libros/edit?book_id={{this._id}}" class="edit-button">Editar</a></div>
    {{/each}}
  </div>

</div>

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script type="text/javascript" src="/javascripts/index.js"></script>